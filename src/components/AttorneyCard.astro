---
const { name, title, image } = Astro.props;
---
<div class="flex flex-col items-center text-center p-4 rounded shadow" style="background: var(--color-surface); color: var(--color-text); font-family: 'Source Serif Pro', serif;">
  <img src={image} alt={name} class="w-24 h-24 rounded-full mb-4" />
  <h3 class="font-bold" style="font-family: 'Merriweather', serif;">{name}</h3>
  <p class="text-gray-500" style="color: var(--color-accent);">{title}</p>
</div>

<div class="fixed bottom-5 right-5 z-50">
    <!-- Contact Button -->
    <button
      class="bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-500 focus:outline-none transition"
      id="contact-button"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 12.5l-6 6-6-6m6-6l-6 6-6-6"
        ></path>
      </svg>
    </button>

    <!-- Contact Form or Details (hidden by default) -->
    <div
      class="hidden bg-white shadow-lg rounded-lg p-6 mt-4 w-64 max-w-xs"
      id="contact-form"
    >
      <h3 class="font-semibold text-lg mb-4">Contact Us</h3>

      <!-- Email and Phone Links -->
      <a
        href="mailto:faruoqmuhammed@gmail.com?subject=Contact%20Us&body=Hello%2C%20I%20would%20like%20to%20get%20in%20touch%20with%20you!"
        class="bg-blue-600 text-white p-4 rounded-md block text-center mb-3 hover:opacity-90"
      >
        Send Email
      </a>
      <a
        href="tel:+254701891004"
        class="bg-green-600 text-white p-4 rounded-md block text-center hover:opacity-90"
      >
        Call Us
      </a>

    </div>
  </div>

  <script>
    // Toggle contact form visibility
    const contactButton = document.getElementById("contact-button");
    const contactForm = document.getElementById("contact-form");

    if (contactButton && contactForm) { // Combine checks
      contactButton.addEventListener("click", () => {
        contactForm.classList.toggle("hidden");
      });
    }
  </script>

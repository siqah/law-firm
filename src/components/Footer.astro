<footer class="w-full text-gray-800 py-12"
     style="background-color: #AECDE2;"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Office Address -->
      <div class="text-center md:text-left">
        <h3 class="text-xl font-bold mb-4 text-yellow-600">Office Address</h3>
        <address class="not-italic space-y-2">
          <p class="text-gray-700">1770 Park St #200</p>
          <p class="text-gray-700">Naperville, IL 60663</p>
          <p class="mt-4 text-gray-700">Phone:</p>
          <p class="text-gray-700">(630) 527-5959</p>
        </address>
      </div>

      <!-- Firm Name -->
      <div class="flex flex-col items-center justify-center space-y-4">
        <h2 class="text-2xl font-bold text-center text-gray-800">Suge & Company Advocate</h2>
        <p class="text-sm text-center" style="color: #395975;">

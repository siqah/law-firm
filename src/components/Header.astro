---
import ThemeToggle from './ThemeToggle.astro';
---


<header class="sticky top-0 z-50 transition-colors duration-300 w-full" style="background-color: var(--color-primary);">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Left: Logo/Title -->
      <div class="flex-shrink-0">
        <h1 class="text-xl sm:text-2xl font-bold text-[var(--color-text)]" style="font-family: 'Merriweather', serif;">
          Suge & Company Advocate
        </h1>
      </div>
      <!-- Right: Navigation + Theme Toggle (desktop) -->
      <div class="hidden lg:flex items-center gap-4">
        <nav class="flex space-x-8">
          <a href="/" class="text-[var(--color-text)] hover:text-[var(--color-accent)] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" style="font-family: 'Source Serif Pro', serif;">Home</a>
          <a href="/about" class="text-[var(--color-text)] hover:text-[var(--color-accent)] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" style="font-family: 'Source Serif Pro', serif;">About</a>
          <a href="/practice-areas" class="text-[var(--color-text)] hover:text-[var(--color-accent)] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" style="font-family: 'Source Serif Pro', serif;">Practice Areas</a>
          <a href="/attorneys" class="text-[var(--color-text)] hover:text-[var(--color-accent)] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" style="font-family: 'Source Serif Pro', serif;">Attorneys</a>
          <a href="/contact" class="text-[var(--color-text)] hover:text-[var(--color-accent)] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" style="font-family: 'Source Serif Pro', serif;">Contact</a>
        </nav>
        <ThemeToggle />
      </div>
      <!-- Hamburger for mobile -->
      <div class="flex lg:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-[var(--color-text)] hover:text-[var(--color-accent)] hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[var(--color-accent)]"
          aria-controls="mobile-menu"
          aria-expanded="false"
          onclick="toggleMobileMenu()"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile menu -->
    <div id="mobile-menu" class="lg:hidden hidden bg-[var(--color-primary)] rounded-b-md shadow-md py-4 px-2 mt-1">
      <nav class="flex flex-col space-y-2 items-start">
        <a href="/" class="block text-[var(--color-text)] hover:text-[var(--color-accent)] px-4 py-2 rounded-md text-base font-medium transition-colors duration-200 w-full" style="font-family: 'Source Serif Pro', serif;">Home</a>
        <a href="/about" class="block text-[var(--color-text)] hover:text-[var(--color-accent)] px-4 py-2 rounded-md text-base font-medium transition-colors duration-200 w-full" style="font-family: 'Source Serif Pro', serif;">About</a>
        <a href="/practice-areas" class="block text-[var(--color-text)] hover:text-[var(--color-accent)] px-4 py-2 rounded-md text-base font-medium transition-colors duration-200 w-full" style="font-family: 'Source Serif Pro', serif;">Practice Areas</a>
        <a href="/attorneys" class="block text-[var(--color-text)] hover:text-[var(--color-accent)] px-4 py-2 rounded-md text-base font-medium transition-colors duration-200 w-full" style="font-family: 'Source Serif Pro', serif;">Attorneys</a>
        <a href="/contact" class="block text-[var(--color-text)] hover:text-[var(--color-accent)] px-4 py-2 rounded-md text-base font-medium transition-colors duration-200 w-full" style="font-family: 'Source Serif Pro', serif;">Contact</a>
      </nav>
      <div class="flex justify-end mt-4 pr-2">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>
<script>
window.onload = function() {
  const btn = document.querySelector('button[aria-controls="mobile-menu"]');
  const menu = document.getElementById('mobile-menu');
  if (btn && menu) {
    btn.addEventListener('click', function() {
      menu.classList.toggle('hidden');
    });
  }
};
</script>

---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import "../styles/global.css"
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact - Suge & Company | Advocate</title>
</head>
<Layout>
  <body 
  style="background: var(--color-primary); color: var(--color-text);"
  class="flex flex-col min-h-screen " :class="{ 'dark': $theme === 'dark' }">
  <!-- Main Content -->
  <main class="flex-grow py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col lg:flex-row gap-8 md:gap-12">
        <div class="lg:w-1/2">
          <div class="bg-white p-6 sm:p-8 md:p-10 rounded-xl shadow-lg dark:bg-gray-800">
            <h2 class="text-2xl sm:text-3xl font-bold mb-6 text-gray-600 dark:text-gray-300" style="font-family: 'Merriweather', serif;">Get In Touch</h2>
            <ContactForm client:load />
          </div>
        </div>
        
        <!-- Contact Info Section -->
        <div class="lg:w-1/2">
          <div class="bg-blue-50 p-6 sm:p-8 md:p-10 rounded-xl h-full shadow-lg dark:bg-gray-700">
            <h2 class="text-2xl text-gray-600 dark:text-gray-300 font-bold mb-6" style="font-family: 'Merriweather', serif;">Our Office</h2>
            
            <div class="space-y-4 md:space-y-6">
              <div class="flex items-start">
                <div class="bg-blue-100 p-2.5 sm:p-3 rounded-full mr-3 sm:mr-4 dark:bg-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-700 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-base text-gray-600 dark:text-gray-300 sm:text-lg font-semibold mb-1" style="font-family: 'Merriweather', serif;">Headquarters</h3>
                  <p class="text-sm sm:text-base text-gray-600 dark:text-gray-300">123 Legal Avenue, Suite 500<br>Lawyers District, 10001</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2.5 sm:p-3 rounded-full mr-3 sm:mr-4 dark:bg-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-700 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-base text-gray-600 dark:text-gray-300 sm:text-lg font-semibold mb-1">Phone</h3>
                  <p class="text-sm sm:text-base text-gray-600 dark:text-gray-300">Main: (123) 456-7890<br>Emergency: (123) 456-7891</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2.5 sm:p-3 rounded-full mr-3 sm:mr-4 dark:bg-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-700 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-base text-gray-600 dark:text-gray-300 sm:text-lg font-semibold mb-1">Email</h3>
                  <p class="text-sm sm:text-base text-gray-600 dark:text-gray-300">info@sugecompany.com<br>support@sugecompany.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2.5 sm:p-3 rounded-full mr-3 sm:mr-4 dark:bg-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-700 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-base sm:text-lg font-semibold text-gray-600 dark:text-gray-300 mb-1">Hours</h3>
                  <p class="text-sm sm:text-base text-gray-600 dark:text-gray-300">Monday-Friday: 8:00 AM - 6:00 PM<br>Saturday: 9:00 AM - 2:00 PM<br>Emergency: 24/7</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</Layout>
</html>